

<!DOCTYPE html>
<html lang="en">

  <head>
    
    <!--favicon-->
        <link rel="shortcut icon" href="favicon.ico" type="image/icon">
        <link rel="icon" href="favicon.ico" type="image/icon">

    <link rel="shortcut icon" href="favicon.ico" type="image/icon">
    <link rel="icon" href="favicon.ico" type="image/icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Update Preferences</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/templatemo-style.css" rel="stylesheet">

    
  </head>

  <body>
    <!-- Left column -->
    <div class="templatemo-flex-row">
      <div class="templatemo-sidebar">
        <header class="templatemo-site-header">
          <div class="square"></div>
        </header>
        <%
        if(updetailList.length!=0){
        updetailList.forEach(detail => {
        %>
  <div class="profile-photo-container">

    
    <img src="uploads/<%=detail.fileToUpload %>" alt="Profile Photo" class="img-responsive" height="200" width="300">
    

  </div>
  <%  }) %>
    <% } else{ %>
        <p>No image uploaded</p>
    <% } %>
        <!-- Search box -->
        <form class="templatemo-search-form" role="search">
          <div class="input-group">
            <button type="submit" class="fa fa-search"></button>
            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
          </div>
        </form>
        <div class="mobile-menu-icon">
          <i class="fa fa-bars"></i>
        </div>
        <nav class="templatemo-left-nav">
          <ul>
            <li>
              <a href="/slogin"><i class="fa fa-home fa-fw"></i>Dashboard</a>
            </li>
            <li>
              <a href="/placement"><i class="fa fa-bar-chart fa-fw"></i>Placement Drives</a>
            </li>
            <li>
              <a href="/detail" class="active"><i class="fa fa-sliders fa-fw"></i>Preferences</a>
            </li>
            <li>
              <a href="/logout"><i class="fa fa-eject fa-fw"></i>Sign Out</a>
            </li>
          </ul>
        </nav>
      </div>
      <!-- Main content -->
      <div class="templatemo-content col-1 light-gray-bg">
        <div class="templatemo-top-nav-container">
        </div>
        <div class="templatemo-content-container">
          <div class="templatemo-content-widget white-bg">
            <h2 class="margin-bottom-10">UPDATE DETAILS</h2>
          
            <%
            if(updetailList.length!=0){
            updetailList.forEach(detail => {
            %>
            <form action="/sdupdate" method="POST" class="templatemo-login-form" enctype="multipart/form-data">
              <div class="row form-group">
                <div class="col-lg-6 col-md-6 form-group">
                  <label for="inputFirstName">First Name</label>
                  <input type="text" name="Fname" class="form-control" id="inputFirstName" value="<%=detail.Fname %>" placeholder="<%=detail.Fname %>" required>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                  <label for="inputLastName">Last Name</label>
                  <input type="text"  name="Lname" class="form-control" id="inputLastName" value="<%=detail.Lname %>" placeholder="<%=detail.Lname %>" required>
                </div>

			       	<div class="col-lg-6 col-md-6 form-group">
                  <label for="USN">Smart Card ID</label>
                  <input type="text" name="USN" class="form-control" id="USN" value="<%=detail.USN %>" placeholder="<%=detail.USN %>" required>
                </div>

				<div class="col-lg-6 col-md-6 form-group">
                  <label for="Phone">Phone:</label>
                  <input type="text" name="Num" class="form-control" id="Phone" value="<%=detail.Num %>" placeholder="<%=detail.Num %>" required>
                </div>

				 <div class="col-lg-6 col-md-6 form-group">
                  <label for="Email">Email</label>
                  <input type="Email" name="Email" class="form-control" id="Email" value="<%=detail.Email %>" placeholder="<%=detail.Email %>" readonly>
                </div>

                <div class="col-lg-6 col-md-6 form-group">
                  <label for="DOB">Date of Birth</label>
                  <input type="date" name="DOB" class="form-control" id="DOB" value="<%=detail.DOB %>" required>
                </div>
				<div class="col-lg-6 col-md-6 form-group">
                  <label class="control-label templatemo-block">Current Semester</label>
                  <select name="Cursem" class="form-control" required>
                    <option value="<%=detail.Cursem %>"><%=detail.Cursem %></option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                  </select>
				  </div>


				  <div class="col-lg-6 col-md-6 form-group">
                  <label class="control-label templatemo-block">Branch of Study</label>
                  <select name="Branch" class="form-control" required>
                    <option value="<%=detail.Branch %>"><%=detail.Branch %></option>
                    <option value="EIE">EIE</option>
                    <option value="IT">IT</option>
                    <option value="CSE">CSE</option>
                    <option value="EEE">EEE</option>
                    <option value="ECE">ECE</option>
                    <option value="MT">MT</option>
                    <option value="CE">CE</option>
                    <option value="BT">BT</option>
                  </select>
                </div>
				<div class="col-lg-6 col-md-6 form-group">
                  <label for="sslc">10th Aggregate</label>
                  <input type="text" name="Percentage" class="form-control" id="sslc" value="<%=detail.Percentage %>" placeholder="<%=detail.Percentage %>" required>
                </div>
				<div class="col-lg-6 col-md-6 form-group">
                  <label for="Pu">12th Aggregate</label>
                  <input type="text" name="Puagg" class="form-control" id="Pu" value="<%=detail.Puagg %>" placeholder="<%=detail.Puagg %>" required>
                </div>
				<div class="col-lg-6 col-md-6 form-group">
                  <label for="BE">Current Aggregate</label>
                  <input type="text" name="Beagg" class="form-control" id="BE" value="<%=detail.Beagg %>" placeholder="<%=detail.Beagg %>" required>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                  <label class="control-label templatemo-block">Current Backlogs</label>
                  <select name="Backlogs" class="form-control" required>
                    <option value="<%=detail.Backlogs%>"><%=detail.Backlogs%></option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                  </select>
                </div>
				<div class="col-lg-6 col-md-6 form-group">
                  <label class="control-label templatemo-block">History of Backlogs</label>
                  <select name="History" class="form-control" required>
                    <option value="<%=detail.History %>"><%=detail.History %></option>
                    <option value="Y">Y</option>
                    <option value="N">N</option>
                  </select>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                  <label class="control-label templatemo-block">Detained Years</label>
                  <select name="Dety" class="form-control" required>
                    <option value="<%=detail.Dety %>"><%=detail.Dety %></option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  </select>
                </div>
                	<div class="col-lg-6 col-md-6 form-group">
                  <label for="fileToUpload">Update Profile Picture </label>
                  <input type="file" name="fileToUpload" class="form-control" id="fileToUpload" >
                </div>
              </div>
              </div>
             <!-- <div class="row form-group">
                <div class="col-lg-12">
                  <label class="control-label templatemo-block">Upload your Profile Pic</label>
                 
                  <input type="file" name="fileToUpload" id="fileToUpload" class="filestyle templatemo-blue-button" data-buttonName="btn-primary" data-buttonBefore="true"
                  data-icon="false">
                  <p>Maximum upload size is 5 MB.</p>
                </div>
              </div>-->
              <div class="form-group text-right">
				<button type="submit"  name="update" class="templatemo-blue-button">update</button>
                <button type="reset" class="templatemo-white-button">Reset</button>
              </div>
            </form>
            <%   }) %>
            <% } else{ %>
                <p>Add Details First</p>
            <% } %>
          </div>
          
        </div>
      </div>
    </div>
    
  </body>

</html>




